{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "/",
  "type": "object",
  "properties": {
    "patch": {
      "type": "object",
      "additionalProperties": false,
      "patternProperties": {
        "^([1-9][0-9]?|[1-4][0-9]{2}|50[0-9]|51[0-2])$": {
          "type": "array",
          "uniqueItems": true,
          "items": {"type": "string"}
        }
      }
    },
    "live": {
      "type": "object",
      "properties": {
        "level": {
          "type": "number",
          "maximum": 1,
          "minimum": 0
        },
        "systems": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "level": {
                "type": "number",
                "maximum": 1,
                "minimum": 0
              },
              "query": {
                "type": "array",
                "uniqueItems": true,
                "items": {
                  "type": "object",
                  "oneOf": [{
                    "properties": {
                      "address": {"$ref":  "#/definitions/address"}
                    },
                    "additionalProperties": false,
                    "required": ["address"]
                  }, {
                    "properties": {
                      "tag": {
                        "type": "string"
                      }
                    },
                    "additionalProperties": false,
                    "required": ["tag"]
                  }]
                }
              } ,
              "uuid": {
                "type": "string"
              }
            },
            "required": [
              "level",
              "query",
              "uuid"
            ]
          }
        }
      },
      "required": [
        "level",
        "systems"
      ]
    }
  },
  "required": [
    "patch",
    "live"
  ],
  "definitions": {
    "address": {
      "type": "integer",
      "maximum": 255,
      "minimum": 1
    }
  }
}
